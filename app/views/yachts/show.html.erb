<div class="photos">
  <% if @yacht.photos.attached? %>
    <% @yacht.photos.each do |photo| %>
      <%= cl_image_tag photo.key, height: 600, width: 800 %>
    <% end %>
  <% else %>
  <img src="https://images.unsplash.com/photo-1549746434-6331eadece3c?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=668&q=80" class="card-img-top" alt="...">
  <% end %>
</div>

<div class="container my-5">
  <h1><%= @yacht.name %></h1>
  <p>Location: <%= @yacht.location %></p>
  <div class="yacht-show-info">
    <h5 class="py-3"><%= @yacht.description %></h5>
    <div class="extra">
      <strong><p class="pb-3">Price per night: Â£<%= @yacht.price_per_night %></p></strong>
      <h6 class="ml-2"><i class="fas fa-child"></i>  Private yacht</h6>
      <p class="ml-4">Capacity (people): <%= @yacht.capacity %> + 1 shared bathroom</p>
      <h6 class="ml-2"><i class="fas fa-key"></i> Self check-in</h6>
      <p class="ml-4">Check yourself in with the lockbox</p>
      <h6 class="ml-2"><i class="fas fa-search-location"></i> Great location</h6>
      <p class="ml-4">90% of recent guests gave the location a 5-star rating.</p>
    </div>
  </div>

  <div class = "d-flex my-3 justify-content-end" >
    <%= link_to 'Book now', new_yacht_booking_path(@yacht), class: 'btn-main' %>
    <%= link_to 'Edit', edit_yacht_path(@yacht), class: 'btn-secondary' %>
    <%= link_to 'Back to yachts', yachts_path, class: 'btn-secondary' %>
  </div>

</div>

