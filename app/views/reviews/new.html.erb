 <div class = "container">
    <div class = "row justify-content-center log-in-form">
      <div class="col-12 col-sm-6 pt-5">
        <h1 class="text-center">Add a Review</h1>


          <%= simple_form_for [@yacht, @review] do |f| %>

           <%= f.error_notification %>
            <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

            <div class="form-inputs">
             <%= f.input :content %>

             <%= f.input :rating, :collection => [1, 2, 3, 4, 5] %>
             <%= f.button :submit, :class => "btn-create btn-lg w-100 text-center"%>



            <% end %>

        <p class="text-center"> <%= link_to 'Back', yachts_path %></p>
     </div>
  </div>
