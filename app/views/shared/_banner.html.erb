
<div class="banner" style=" background-image: url(https://images.unsplash.com/photo-1507525428034-b723cf961d3e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1953&q=80);">

  <div class="container">

    <div class = "col-14 text-center" >
        <span id="banner-typed-text" class="display-3 text-center" font= 'Proza Libre', sans-serif;></span>
        <span style="visibility:hidden;">|</span>
    </div>

    <div class="row justify-content-center align-items-center">

      <div class="col-8 d-flex text-center align-items-center">
        <table>
          <%= form_tag root_path, method: :get do %>
            <%= text_field_tag :query,
              params[:query],
              class: "form-control",
              placeholder: "Find a yacht",
              class: 'search'
            %>
            <%= submit_tag "Search", class: "btn btn-main" %>
          <% end %>
        </table>

      </div>
    </div>
  </div>
</div>


